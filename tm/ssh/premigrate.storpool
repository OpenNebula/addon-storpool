#-------------------------------------------------------------------------------
# premigrate srcHost dstHost vmPath vmId datasourceId template
#-------------------------------------------------------------------------------

function splog() { logger -t "tm_ssh_${0##*/}" "$*"; }

#-------------------------------------------------------------------------------
# Set up the environment to source common tools
#-------------------------------------------------------------------------------

if [ -n "${ONE_LOCATION}" ]; then
    TMCOMMON=$ONE_LOCATION/var/remotes/tm/tm_common.sh
else
    TMCOMMON=/var/lib/one/remotes/tm/tm_common.sh
fi

source $TMCOMMON

TM_PATH=$(dirname $0)

#-------------------------------------------------------------------------------
# Get cmd arguments from OpenNebula core
#-------------------------------------------------------------------------------

SRC_HOST=$1
DST_HOST=$2
VM_PATH=$3

VM_ID=$4
DS_ID=$5

TEMPLATE=$6

#-------------------------------------------------------------------------------
# Copy VM related content to the new host. Mostly the context ISO image
#-------------------------------------------------------------------------------

DST_DIR="$VM_PATH"
CMD="$SSH $DST_HOST 'mkdir -p $DST_DIR'"
exec_and_log "eval $CMD" "Error creating destination path $DST_DIR"

TAR_COPY="$SSH $SRC_HOST '$TAR -C $DST_DIR --sparse -cf - .'"
TAR_COPY="$TAR_COPY | $SSH $DST_HOST '$TAR -C $DST_DIR --sparse -xf -'"

exec_and_log "eval $TAR_COPY" "Error copying VM directory to target host $DST_DIR"

#-------------------------------------------------------------------------------
# Run the shared tm_mad to move the VM disks too
#-------------------------------------------------------------------------------

pushd "${TM_PATH}/../shared/"
bash "${0##*/}" "$SRC_HOST" "$DST_HOST" "$VM_PATH" "$VM_ID" "$DS_ID" "$TEMPLATE"
popd

splog "END"
exit 0
